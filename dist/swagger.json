{
    "openapi": "3.0.0",
    "info": {
        "title": "Pet-Adoption API",
        "description": "API responsible for managing pet adoptions",
        "version": "1.0.0"
    },
    "paths": {
        "/pets": {
            "get": {
                "tags": ["Pet"],
                "summary": "Obtain all pets, optionally filtering by type, size and availability",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": ["dog", "cat", "other"]
                        },
                        "description": "Pet type"
                    },
                    {
                        "name": "size",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": ["small", "medium", "large"]
                        },
                        "description": "Pet size"
                    },
                    {
                        "name": "available",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        },
                        "description": "Pet availability"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get a list of pets",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Pet"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid query parameters"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "post": {
                "tags": ["Pet"],
                "summary": "Register a new pet",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PetInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registered pet successfully"
                    },
                    "400": {
                        "description": "Invalid body parameters"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/pets/{id}": {
            "get": {
                "tags": ["Pet"],
                "summary": "Obtain a specific pet",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Pet's ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retrieve a specific pet successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Pet"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pet not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "put": {
                "tags": ["Pet"],
                "summary": "Update a pet",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Pet's ID"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/PetInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated pet successfully"
                    },
                    "400": {
                        "description": "Invalid data for update"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "delete": {
                "tags": ["Pet"],
                "summary": "Delete a specific pet",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Pet's ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Removed pet successfully"
                    },
                    "404": {
                        "description": "Pet not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/adopters": {
            "get": {
                "tags": ["Adopter"],
                "summary": "Obtain all adopters",
                "responses": {
                    "200": {
                        "description": "Get a list of adopters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "$ref": "#/components/schemas/Adopter"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "post": {
                "tags": ["Adopter"],
                "summary": "Register a new adopter",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AdopterInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registered adopter successfully"
                    },
                    "400": {
                        "description": "Invalid body parameters"
                    },
                    "409": {
                        "description": "E-mail already registered"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/adopters/{id}": {
            "get": {
                "tags": ["Adopter"],
                "summary": "Obtain a specific adopter",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Adopter's ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retrieve a specific adopter successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Adopter"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Adopter not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "put": {
                "tags": ["Adopter"],
                "summary": "Update a adopter",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Adopter's ID"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/AdopterInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated adopter successfully"
                    },
                    "400": {
                        "description": "Invalid body parameters"
                    },
                    "404": {
                        "description": "Adopter not found"
                    },
                    "409": {
                        "description": "E-mail already registered"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "delete": {
                "tags": ["Adopter"],
                "summary": "Delete a specific pet",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Adopter's ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Removed adopter successfully"
                    },
                    "404": {
                        "description": "Adopter not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/adoptions": {
            "get": {
                "tags": ["Adoption"],
                "summary": "Obtain all adoptions",
                "responses": {
                    "200": {
                        "description": "Get a list of adoptions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "$ref": "#/components/schemas/Adoption"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "post": {
                "tags": ["Adoption"],
                "summary": "Register a new adoption",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AdoptionInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registered adoption successfully"
                    },
                    "400": {
                        "description": "Adoption date is required"
                    },
                    "404": {
                        "description": "Adopter not found"
                    },
                    "409": {
                        "description": "Pet is not available for adoption"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/adoptions/{id}": {
            "get": {
                "tags": ["Adoption"],
                "summary": "Obtain a specific adoption",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Adoption's ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retrieve a specific adoption successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Adoption"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Adoption not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "delete": {
                "tags": ["Adoption"],
                "summary": "Delete a specific adoption",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Adoption's ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Removed adoption successfully"
                    },
                    "404": {
                        "description": "Adoption not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Pet": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "Pet's ID"
                    },
                    "name": {
                        "type": "string",
                        "description": "Pet's name"
                    },
                    "age": {
                        "type": "integer",
                        "description": "Pet's age"
                    },
                    "type": {
                        "type": {
                            "enum": ["dog", "cat", "other"]
                        },
                        "description": "Pet's type"
                    },
                    "breed": {
                        "type": "string",
                        "description": "Pet's breed"
                    },
                    "size": {
                        "type": {
                            "enum": ["small", "medium", "large"]
                        },
                        "description": "Pet's size"
                    },
                    "description": {
                        "type": "string",
                        "description": "Pet's description"
                    },
                    "available": {
                        "type": "boolean",
                        "description": "Pet's availability"
                    }
                }
            },
            "PetInput": {
                "type": "object",
                "required": ["name", "type", "size"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Pet's name"
                    },
                    "age": {
                        "type": "integer",
                        "description": "Pet's age"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["dog", "cat", "other"],
                        "description": "Pet's type"
                    },
                    "breed": {
                        "type": "string",
                        "description": "Pet's breed"
                    },
                    "size": {
                        "type": "string",
                        "enum": ["small", "medium", "large"],
                        "description": "Pet's size"
                    },
                    "pet_description": {
                        "type": "string",
                        "description": "Pet's description"
                    },
                    "available": {
                        "type": "boolean",
                        "description": "Pet's availability"
                    }
                }
            },
            "Adopter": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "Adopter's ID"
                    },
                    "name": {
                        "type": "string",
                        "description": "Adopter's name"
                    },
                    "email": {
                        "type": "string",
                        "description": "Adopter's e-mail"
                    },
                    "phone": {
                        "type": "integer",
                        "description": "Adopter's phone"
                    }
                }
            },
            "AdopterInput": {
                "type": "object",
                "required": ["name", "email", "phone"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Adopter's name"
                    },
                    "email": {
                        "type": "string",
                        "description": "Adopter's e-mail"
                    },
                    "phone": {
                        "type": "integer",
                        "description": "Adopter's phone"
                    }
                }
            },
            "Adoption": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "Adoption's ID"
                    },
                    "pet_id": {
                        "type": "integer",
                        "description": "Pet's ID"
                    },
                    "adopter_id": {
                        "type": "integer",
                        "description": "Adopter's ID"
                    },
                    "adoption_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Adoption's date"
                    },
                    "pet": {
                        "description": "Pet's data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Pet"
                                }
                            }
                        }
                    },
                    "adopter": {
                        "description": "Adopter's data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Adopter"
                                }
                            }
                        }
                    }
                }
            },
            "AdoptionInput": {
                "type": "object",
                "required": ["pet_id", "adopter_id", "adoption_date"],
                "properties": {
                    "pet_id": {
                        "type": "integer",
                        "description": "Pet's ID"
                    },
                    "adopter_id": {
                        "type": "integer",
                        "description": "Adopter's ID"
                    },
                    "adoption_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Adoption's date"
                    }
                }
            }
        }
    }
}
